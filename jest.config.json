{
    "roots": [
        "<rootDir>/src"
    ],
    "testMatch": [
        "**/*-test.js"
    ],
    "setupFiles": ["./jest-setup.js"],
    "collectCoverage": true,
    "collectCoverageFrom": [
        "**/*.{js,jsx}"
    ],
    "coverageDirectory": "bin/coverage",
    "coverageThreshold": {
        "global": {
            "branches": 100,
            "functions": 100,
            "lines": 100,
            "statements": 100
        }
    },
    "coveragePathIgnorePatterns": ["index.jsx", "jest-setup.js"]
}
